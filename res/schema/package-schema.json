{
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "resources": {
            "type": "object",
            "additionalProperties": {
                "type": [ "string", "array" ]
            }
        },
        "bindings": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string",
                        "required": true
                    },
                    "language": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "required": true
                    },
                    "parameters": {
                        "type": "object",
                        "additionalProperties": true
                    }
                }
            }
        },
        "binding-types": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string"
                    },
                    "parameters": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object",
                            "properties": {
                                "description": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "override": {
            "type": [ "string", "array" ],
            "items": {
                "type": "string"
            }
        },
        "override-order": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "config": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "puli-dir": {
                    "type": "string"
                },
                "install-file": {
                    "type": "string"
                },
                "dump-dir": {
                    "type": "string"
                },
                "write-repo": {
                    "type": "string"
                },
                "read-repo": {
                    "type": "string"
                },
                "discovery-storage": {
                    "type": "string"
                }
            }
        },
        "plugins": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "packages": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "install-path": {
                        "type": "string",
                        "required": true
                    },
                    "installer": {
                        "type": "string"
                    },
                    "enabled-bindings": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "disabled-bindings": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}

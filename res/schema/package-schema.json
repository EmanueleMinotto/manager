{
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "resources": {
            "type": "object",
            "additionalProperties": {
                "type": [ "string", "array" ]
            }
        },
        "tags": {
            "type": "object",
            "additionalProperties": {
                "type": [ "string", "array" ]
            }
        },
        "tag-definitions": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string"
                    }
                }
            }
        },
        "override": {
            "type": [ "string", "array" ],
            "items": {
                "type": "string"
            }
        },
        "package-order": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "config": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "puli-dir": {
                    "type": "string"
                },
                "install-file": {
                    "type": "string"
                },
                "dump-dir": {
                    "type": "string"
                },
                "write-repo": {
                    "type": "string"
                },
                "read-repo": {
                    "type": "string"
                }
            }
        },
        "plugins": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "packages": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "installPath": {
                        "type": "string",
                        "required": true
                    },
                    "installer": {
                        "type": "string"
                    }
                }
            }
        }
    }
}

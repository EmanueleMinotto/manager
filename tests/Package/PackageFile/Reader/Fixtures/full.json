{
    "name": "my/application",
    "resources": {
        "/app": "res"
    },
    "bindings": [
        {
            "selector": "/app/config*.yml",
            "type": "my/type"
        }
    ],
    "binding-types": {
        "my/type": {
            "description": "Description of my type.",
            "parameters": {
                "param": {
                    "description": "Description of the parameter.",
                    "default": 1234
                }
            }
        }
    },
    "override": "acme/blog",
    "package-order": [ "acme/blog-extension1", "acme/blog-extension2" ],
    "config": {
        "puli-dir": "puli-dir",
        "factory": {
            "class": "Puli\\MyFactory",
            "file": "{$puli-dir}/MyFactory.php"
        },
        "repository": {
            "type": "my-type",
            "path": "{$puli-dir}/my-repo",
            "store": {
                "type": "my-store-type"
            }
        }
    },
    "plugins": [
        "Puli\\RepositoryManager\\Tests\\Package\\PackageFile\\Fixtures\\TestPlugin"
    ],
    "packages": {
        "package1": {
            "install-path": "/path/to/package1",
            "installer": "Composer"
        },
        "package2": {
            "install-path": "/path/to/package2"
        }
    }
}
